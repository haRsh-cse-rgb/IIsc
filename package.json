{
  "name": "stis-conference-pwa",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "build:static": "next build && next export",
    "start": "NODE_ENV=production node server.js",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "seed": "tsx lib/server/seed.ts",
    "cap:prepare": "node scripts/prepare-capacitor.js",
    "cap:sync": "npm run cap:prepare && npx cap sync",
    "cap:copy-apk": "node scripts/copy-apk.js",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "cap:build:android": "npm run build && npm run cap:sync && cd android && ./gradlew assembleRelease",
    "cap:build:ios": "npm run build && npm run cap:sync"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/ios": "^7.4.4",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "mongoose": "^9.0.0",
    "next": "^14.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/whatwg-url": "^13.0.0",
    "autoprefixer": "^10.4.18",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3"
  }
}
